<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mayinews.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <FrameLayout

        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <View
        android:id="@+id/divider"
        android:background="@color/devider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RadioGroup
        android:paddingTop="6dp"
        android:id="@+id/rgMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/first_page_selector"
            android:gravity="center"
            android:text="首页"


            android:textColor="@drawable/rg_textcolor_selector"
            android:textSize="10sp" />

        <RadioButton

            android:id="@+id/rb_album"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/album_page_selector"
            android:gravity="center"
            android:text="私照"
            android:textColor="@drawable/rg_textcolor_selector"
            android:textSize="10sp" />

        <RadioButton

            android:id="@+id/rb_nb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/album_around_selector"
            android:gravity="center"
            android:text="周边"
            android:textColor="@drawable/rg_textcolor_selector"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/user_page_selector"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/rg_textcolor_selector"
            android:textSize="10sp" />

    </RadioGroup>

</LinearLayout>
